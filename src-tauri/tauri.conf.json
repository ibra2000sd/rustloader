  {
    "$schema": "./tauri_schema.json",
    "package": {
      "productName": "RustLoader",
      "version": "1.0.0"
    },
    "build": {
      "beforeDevCommand": "npm run dev",
      "beforeBuildCommand": "npm run build",
      "devServer": {
        "url": "http://localhost:5173"
      },
      "distDir": "../dist"
    },
    "tauri": {
      "bundle": {
        "active": true,
        "identifier": "com.rustloader.app",
        "targets": "all",
        "icon": [
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ]
      },
      "windows": [
        {
          "label": "main",
          "title": "RustLoader",
          "width": 900,
          "height": 700,
          "minWidth": 800,
          "minHeight": 600,
          "resizable": true,
          "fullscreen": false
        }
      ],
      "security": {
        "csp": null
      },
      "allowlist": {
        "shell": {
          "open": true
        },
        "fs": {
          "all": true,
          "readFile": true,
          "writeFile": true,
          "readDir": true,
          "copyFile": true,
          "createDir": true,
          "removeDir": true,
          "removeFile": true,
          "exists": true,
          "scope": ["**"]
        },
        "dialog": {
          "all": true
        },
        "path": {
          "all": true
        }
      },
      "plugins": {
        "shell": {
          "open": true
        },
        "fs": {
          "all": true,
          "scope": {
            "allow": ["**"],
            "deny": []
          }
        },
        "dialog": {
          "all": true
        },
        "path": {
          "all": true
        }
      }
    }
  }
  